{
  "qc": {
    "config": {
      "modules": ["TRD"],
      "database": {
        "implementation": "CCDB",
        "host": "ccdb-test.cern.ch:8080"
      },
      "conditionDB": {
        "url": "http://alice-ccdb.cern.ch"
      },
      "infologger": {
        "filterDiscardDebug": false,
        "filterDiscardLevel": 11
      }
    },

    "tasks": {
      "Digits": {
        "active": "true",
        "className": "o2::quality_control_modules::trd::DigitsTask",
        "moduleName": "QcTRD",
        "detectorName": "TRD",
        "cycleDurationSeconds": "30",
        "dataSource": {
          "type": "direct",
          "query": "digits:TRD/DIGITS;triggers:TRD/TRKTRGRD"
        }
      }
    },

    "checks": {
      "PulseHeightCheck": {
        "active": "true",
        "className": "o2::quality_control_modules::trd::PulseHeightCheck",
        "moduleName": "QcTRD",
        "policy": "OnAny",
        "detectorName": "TRD",

        "dataSource": [
          {
            "type": "Task",
            "name": "Digits",
            "MOs": ["PulseHeightProfile"]
          }
        ],

        "checkParameters": {
          "driftregionstart": "7",
          "driftregionend": "20",
          "peakregionstart": "1",
          "peakregionend": "5",
          "pulseheightminsum": "1500",
          "pulseheightratio": "1.1"
        }
      }
    },

    "detectors": {
      "TRD": {
        "active": "true",
        "taskNames": ["Digits"]
      }
    }
  }
}
